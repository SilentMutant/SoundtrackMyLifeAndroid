<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/songNameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="SongName"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/albumNameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="AlbumName"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/songNameBox"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/artistNameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ArtistName"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songNameBox"
        />
</androidx.constraintlayout.widget.ConstraintLayout>